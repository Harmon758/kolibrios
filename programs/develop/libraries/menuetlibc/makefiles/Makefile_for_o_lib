include $(MENUETDEV)/osrules.mak

.SUFFIXES: .asm;

$(OUTFILE): $(OBJS)
	kos32-ld -r -o $(OUTFILE) $(OBJS) $(LDFLAGS)

.c.o: 
	$(MGCC) $*.c -o $*.o $(CFLAGS)

.cpp.o: 
	$(MGPP) $*.cpp -o $*.o $(CPPFLAGS)
	
.cc.o: 
	$(MGPP) $*.cc -o $*.o $(CPPFLAGS)

.asm.o:
	nasm $*.asm -f $(ASMFMT) -o $*.o

.s.o:
	kos32-cpp $*.s -o $*.asm -nostdinc -I$(MENUETDEV)/include
	kos32-as $*.asm -o $*.o
	$(RM) $*.asm

clean:
	$(RM) $(OBJS) $(OUTFILE)

rebuild: clean $(OUTFILE)
