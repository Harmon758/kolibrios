char buffer[11]="";
inline fastcall dword IntToStr(dword ESI)
{
     $mov     edi, #buffer
     $mov     ecx, 10
     $test     esi, esi
     $jns     f1
     $mov     al, '-'
     $stosb
     $neg     esi
f1:
     $mov     eax, esi
     $push     -'0'
f2:
     $xor     edx, edx
     $div     ecx
     $push     edx
     $test     eax, eax
     $jnz     f2
f3:
     $pop     eax
     $add     al, '0'
     $stosb
     $jnz     f3
     $mov     eax, #buffer
     $ret
}


inline fastcall int strcmp(dword EAX,EBX)
{
	#speed
	ESI=EAX;
	EBX--;
TOP:
	EBX++;
	$LODSB
	$CMP AL,0
	$JE HERE
	$CMP DSBYTE[EBX],AL
	$JE TOP
HERE:
	AL-=DSBYTE[EBX];
	return AL;
	#codesize
}


inline fastcall dword ChangeCase(dword EDX)
{
	#speed
	AL=DSBYTE[EDX];
	IF(AL>='a')&&(AL<='z')DSBYTE[EDX]=AL&0x5f;
	EDX++;
	do{
		AL=DSBYTE[EDX];
		IF(AL>='A')&&(AL<='Z')DSBYTE[EDX]=AL|0x20;
		EDX++;
	}while(AL!=0);
	#codesize
}

