#ifndef _CSTDIO_INCLUDED
#define _CSTDIO_INCLUDED
#include <stdio.h>
class ios
{
public:
    enum open_mode { in        = 0x01,
                     out       = 0x02,
                     ate       = 0x04,
                     app       = 0x08,
                     trunc     = 0x10,
                     nocreate  = 0x20,
                     noreplace = 0x40,
                     binary    = 0x80 };
    enum seek_dir { beg=0, cur=1, end=2 };

};
#endif
